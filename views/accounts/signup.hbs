<section class="sign-up">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-4 col-md-6 col-sm-12">
                <div class="card">
                    <div class="card-body">
                       <div class="p-2">
                           <div class="mb-4 text-center">
                               <h2 class="display-4">Sign Up</h2>
                           </div>
                            {{#if message}}
                                <div class="alert alert-danger" role="alert">
                                    <div class="container">
                                        <strong>{{ message }}</strong>
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true">
                                                <i class="now-ui-icons ui-1_simple-remove"></i>
                                            </span>
                                        </button>
                                    </div>
                                </div>
                            {{/if}}
                            
                            <form method="POST">
                                <div class="form-group">
                                    <input type="email" name="email" placeholder="Email Address" class="form-control" autocomplete="off" autofocus>
                                </div>
                                <div class="form-group">
                                    <input type="text" name="name" placeholder="FullName" class="form-control" autocomplete="off">
                                </div>
                                <div class="form-group">
                                    <input type="text" name="username" placeholder="Usernane" class="form-control" autocomplete="off">
                                </div>
                                <div class="form-group">
                                    <input type="password" name="password" placeholder="Password" class="form-control" autocomplete="off">
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-block">Sign Up</button>
                                </div>
                            </form>
                       </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>